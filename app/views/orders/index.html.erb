<% @orders.each do |order| %>
    <%= link_to order.id, order %>
    <label>Pickup Date: </label>
        <%= order.pickup_date.strftime("%m/%d/%y") %> <br> <br>
    <% order.products.each do |product| %>
    <label>Category: </label>
        <%= product.category %> <br>
        <label>Size: </label>
        <%= product.size %> <br>
        <label>Flavor: </label>
        <%= product.flavor %> <br>
        <label>Current Quantity: </label>
        <%= product.current_quantity %> <br> <br>      
<% end %>
<% end %>