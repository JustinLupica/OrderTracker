<!DOCTYPE html>
<html>
  <head>
    <title>RailsAppProductOrdering</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
  <%= button_to "View All Customers", customers_path, :method => "get", :class => "btn btn-default" %>
  <%= button_to "View All Orders", orders_path, :method => "get", :class => "btn btn-default" %>
    <%= yield %>
  <footer>
  <% if current_user %>
    <%= button_to "Logout", logout_path, :class => "btn btn-outline-danger" %>
    <br>
    <label>Logged in as: <%= session[:username] %></label>
  <% else %>
    <%= link_to "Sign Up", signup_path %>
    <br>
    <%= link_to "Sign in with Facebook", '/auth/facebook' %>
  <% end%>
  </footer>

  </body>
</html>
