<% @errors && @errors.each do |e| %>
    <%= e %>
<% end %>

<h1>New Customer</h1>

<%= form_for(@customer) do |f| %>

    <p>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </p>
     <%= f.submit %>

<% end %>